<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BenchBase">
    <defName>ArchipelagoGrinder</defName>
    <label>Archipelago Grinder</label>
    <description>Combines seemingly random items to... send items to another world? Doesn't make much sense to me, but it has something to do with the nanotech that beams knowledge directly into our brains, so we try not to question it too much.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>APTable/APTable</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3.5,1.5)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <costStuffCount>75</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costList>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>3500</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(3,1)</size>
    <designationCategory>Production</designationCategory>
    <uiOrder>5000</uiOrder>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
  </ThingDef>

  <ThingDef ParentName="ArtBuildingBase">
    <defName>SculptureArchipelago</defName>
    <label>archipelago sculpture</label>
    <description>A torso-sized piece of material sculpted into an artistic form, by artisans from another dimension</description>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingClass>Building_Art</thingClass>
    <thingCategories>
      <li>BuildingsArt</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtSculpture</nameMaker>
        <descriptionMaker>ArtDescription_Sculpture</descriptionMaker>
        <canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
      </li>
    </comps>
    <graphicData>
      <texPath>Sculpture/ArchipelagoSculpture</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1.5,1.5)</drawSize>
    </graphicData>
    <fillPercent>0.35</fillPercent>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Artistic</workSkill>
      <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
      </defaultIngredientFilter>
    </recipeMaker>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <Flammability>0</Flammability>
      <Mass>3</Mass>
      <Beauty>50</Beauty>
      <WorkToMake>18000</WorkToMake>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <useHitPoints>false</useHitPoints>
    <costStuffCount>50</costStuffCount>
    <building>
      <paintable>true</paintable>
    </building>
  </ThingDef>
</Defs>
